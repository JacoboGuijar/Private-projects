from twitter_scraper import Profile #instalar twitter_scrapper: python -m pip install twitter_scrapper
usuario = input() #Introducir el usuario
print(usuario+' est√° siguiendo a '+str(Profile(usuario).following_count)+' cuentas.\n'+usuario+' tiene '+str(Profile(usuario).followers_count)+' seguidores.\n'+usuario+'Ha tuiteado '+str(Profile(usuario).tweets_count)+' veces')
